extends layout

block content
  h1= title
  p(id="name") You're more than welcome to Alan's second #{title}

  div(style="padding:20px")
    button(onclick='getInfo()') Some Facebook Facts
  div


  img(id='profileImage', style="padding: 20px")

  div(id="fb-root")
  div(class="fb-login-button", data-max-rows="1", data-size="large",
  data-show-faces="false", data-auto-logout-link="false")


  script.
    function getInfo() {
      FB.api('/me', 'GET', {fields: 'last_name, name, id, sports, location, picture.width(150).height(150)'}, function (response) {
        if (response && !response.error) {
          document.getElementById("profileImage").setAttribute("src", response.picture.data.url);
          document.getElementById("name").innerHTML = "What's up "+response.name+"!";
        }
      });
    }

